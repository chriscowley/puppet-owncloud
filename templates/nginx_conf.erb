# Filed controlled by Puppet. Any changes will be overwritten
#
upstream php-handler {
  server 127.0.0.1:9000;
  #server unix:/var/run/php5-fpm.sock;
}

<% if $ssl %>
server {
  listen 80;
  server_name <% @servername %>;
  return 301 https://$server_name$request_uri;  # enforce https
}
<% end -%>
#
#
# The default server
#
server {`
    <% if @ssl %>
    listen       443 ssl;
    ssl_certificate /etc/nginx/cert/owncloud.crt;
    ssl_certificate_key /etc/nginx/cert/owncloud.key;
    <% else %>
    <% if @servername %>
    listen       80;
    <% else %>
    listen       80 default_server;
    <% end %>
    <% end %>
    <% if @servername %>
    server_name <% @servername %>;
    <% else %>
    server_name _;
    <% end %>
    client_max_body_size 4G;
    root   /var/www/owncloud/;
    <% if @servername %>
    access_log /var/log/nginx/<% @servername %>_access.log;
    error_log /var/log/nginx/<% @servername %>_error.log;
    <% else %>
    access_log /var/log/nginx/owncloud_access.log;
    error_log /var/log/nginx/owncloud_error.log;
    <% end %>
    fastcgi_buffers 64 4K;
    
    rewrite ^/caldav(.*)$ /remote.php/caldav$1 redirect;
    rewrite ^/carddav(.*)$ /remote.php/carddav$1 redirect;
    rewrite ^/webdav(.*)$ /remote.php/webdav$1 redirect;

    index index.php;
    error_page 403 /core/templates/403.php;
    error_page 404 /core/templates/404.php;
    
    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location ~ ^/(data|config|\.ht|db_structure\.xml|README) {
        deny all;
    }

    location / {
        rewrite ^/.well-known/host-meta /public.php?service=host-meta last;
        rewrite ^/.well-known/host-meta.json /public.php?service=host-meta-json last;
        
        rewrite ^/.well-known/carddav /remote.php/carddav/ redirect;
        rewrite ^/.well-known/caldav /remote.php/caldav/ redirect;
        
        rewrite ^(/core/doc/[^\/]+/)$ $1/index.html;
       
        try_files $uri $uri/ index.php;
    }
                #
    # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
    #
    location ~ ^(.+?\.php)(/.*)?$ {
        fastcgi_pass   php-handler;
        fastcgi_index  index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$1;
        fastcgi_param PATH_INFO $2;
        <% if $ssl %>
        fastcgi_param HTTPS on;
        <% end -%>
        try_files $1 = 404;
        
        include        fastcgi_params;
    }
    location ~* \.(jpg|png|gif|jpeg|css|js|mp3|wav|swf|mov|doc|pdf|xls|ppt|docx|pptx|xlsx)$ {
        proxy_buffering           on;
        proxy_cache_valid 200 120m;
        expires 30d;
        access_log on;
  }
}

